            <gradient android:startColor="#ff1a1a1a" android:endColor="#ff373737" android:angle="90.0" android:centerColor="#ff33b5e5" />
            <stroke android:width="3.0dip" android:color="#ffffffff" />
            <padding android:left="16.0dip" android:top="16.0dip" android:right="16.0dip" android:bottom="16.0dip" />
            <corners android:radius="12.0px" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:startColor="#ff1a1a1a" android:endColor="#ff373737" android:angle="90.0" />
