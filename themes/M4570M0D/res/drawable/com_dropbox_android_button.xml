        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:startColor="#ff000000" android:endColor="#ff1a1a1a" android:angle="90.0" />
            <stroke android:width="0.0dip" android:color="#ff33b5e5" />
            <padding android:left="16.0dip" android:top="16.0dip" android:right="16.0dip" android:bottom="16.0dip" />
            <corners android:radius="12.0px" />
        </shape>
    </item>
</selector>
